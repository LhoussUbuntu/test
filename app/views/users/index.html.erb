<h1>Utilisateurs</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :email %>
  <%= f.search_field :email_cont %>

  <%= f.submit %>
<% end %>

<table class="table">
   <thead>
      <tr>
         <th scope="col">#</th>
         <th scope="col">email</th>
      </tr>
   </thead>
   <tbody>
      <% @users.each do |user| %>
      <tr>
         <th scope="row"><%= user.id %></th>
         <td><%= user.email%></td>
      </tr>
      <% end %>
   </tbody>
</table>
