<%= form_for(@user, url: {action: "add_user"}) do |f| %>

  <div class="form-inputs">
    <%= f.label :email %>
    <%= f.email_field :email, label: false %>
  </div>
  <div class="form-inputs">
    <%= f.label :password %>
    <%= f.password_field :password, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>